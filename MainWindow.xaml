<Window x:Class="GetOutAdminV2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:GetOutAdminV2._0"
        xmlns:behaviors="clr-namespace:GetOutAdminV2._0"
        xmlns:vm="clr-namespace:GetOutAdminV2.ViewModels"
        Title="MainWindow" Height="900" Width="1600"
        Background="#1E1E1E" 
        WindowStyle="ThreeDBorderWindow" 
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:NavigationViewModel/>
    </Window.DataContext>
    <Grid>
        <Border
            Background="Black"
            CornerRadius="20"
            />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
        </Grid>
        <Grid VerticalAlignment="Top"
              Width="auto">
            <Border
                Background="#6B46C1"
                CornerRadius="0, 0, 20, 20"
                />
            <StackPanel Height="100">
                <Button Command="{Binding LogInCommand}" IsDefault="True">
                    <Grid>
                        <Label Content="Connexion"/>
                    </Grid>
                </Button>
                <Button Command="{Binding ListUsersCommand}">
                    <Grid>
                        <Label Content="Liste des utilisateurs"/>
                    </Grid>
                </Button>
                <Button Command="{Binding DashBoardCommand}">
                    <Grid>
                        <Label Content="DashBoard"/>
                    </Grid>
            </StackPanel>
        </Grid>
            Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Frame Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
